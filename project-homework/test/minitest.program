# local variables and parameters
function id (x);

function fact (n) {
  if n <= 1 { return 1 }
  else { var n1 = n - 1; return n * id(fact(n1)) }
}


function id (x) {
   var z = x;
   { var z = z;   # Ok to redefine variable in an inner block
     return z
   }
}

