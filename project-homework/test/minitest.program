# control structures
function test2 () {
  var i = 1;
  var sum = 0;
  while i <= 4 {
    if i % 2 == 1 {
      sum = sum + i;
    }
    elseif (i % 2) == 0 {
      sum = sum + i * 2
    }
    else { @undef + 1 };   # force an error in this case
    i = i + 1
  };

  return sum - 16
}

