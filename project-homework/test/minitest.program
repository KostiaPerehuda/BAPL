# arrays
function test4 () {
  var results = g_results?|0;

  var a = new [10];
  var i = 1; while i <= 10 { a[i] = i^2; i = i + 1 };

  var sum = 0;
  i = 10; while i >= 1 { sum = sum + a[i]; i = i - 1 };

  i = 1; while i <= 10 { a[i] = new [10]; i = i + 1 };
