#{#}   # empty long comment

# Expressions

@ 5 < 4;
@ 5 >= 4;
#{
   a long comment
#}
{_x_1 = (0.5 + .5) * 5.E+00 + 4e0 + -700.0e-2 ; ;; };
@_x_1;  # a short comment
{ y__2 =   ((3 >= 2) + (3 <= 2) + (3 == 2)
       + (3 != 2) + (3 < 2) + (3 > 2))};
@y__2 * !!10;
@ 0x10 / 4;
@ _x_1 + y__2;;



# control structures

i = 1;
while i <= 4 {
  if i % 2 == 1 {
    @i;
  }
  elseif i % 2 == 0 {
    @i + .0
  }
  else { @undef + 1 };   # force an error in this case
  i = i + 1
};
return i
